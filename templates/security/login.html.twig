{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<div class="pure-g">

		<div class="pure-u-1-3 div-form" style="margin: auto;">
			<h1>Connexion</h1>

			<form method="post" class="pure-form pure-form-stacked">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<label for="inputEmail">Email ou pseudo</label>
				<input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="pure-input-1" autocomplete="email" required autofocus>
				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="pure-input-1" autocomplete="current-password" required>

				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
				        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
				        See https://symfony.com/doc/current/security/remember_me.html
				
				        <div class="checkbox mb-3">
				            <label>
				                <input type="checkbox" name="_remember_me"> Remember me
				            </label>
				        </div>
				    #}

				<button class="pure-button pure-button-primary" type="submit">
					Sign in
				</button>
			</form>

		</div>

	</div>

{% endblock %}
