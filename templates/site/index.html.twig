{% extends 'base.html.twig' %}

{% block title %}Site index
{% endblock %}

{% block body %}
	<h1>Site index</h1>
	<div class="pure-g">
		<div class="pure-u-1-3">
			<table class="pure-table" style="width: 100vw">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nom</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for site in sites %}
						<tr>
							<td>{{ site.id }}</td>
							<td>{{ site.nom }}</td>
							<td>
								<a href="{{ path('app_site_show', {'id': site.id}) }}">show</a>
								<a href="{{ path('app_site_edit', {'id': site.id}) }}">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<a href="{{ path('app_sortie_reset') }}" class="pure-button pure-button-primary" style="margin-top: 10px;">Cr√©er une sortie</a>
			
		</div>
	</div>

{% endblock %}
