{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
    <h1>Ville index</h1>
	<div class="pure-g">
		<div class="pure-u-1-3">
			<table class="pure-table" style="width: 100vw">
  
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>CodePostal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>
                    <div class="containerBouton"></div>     
                    <a href="{{ path('app_ville_show', {'id': ville.id}) }}" class="pure-button pure-button-primary">show</a>
                    <a href="{{ path('app_ville_edit', {'id': ville.id}) }}"class="pure-button pure-button-primary">edit</a>
                    </div>
                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
<div class="containerBouton"></div>
    <a href="{{ path('app_ville_new') }}" class="pure-button pure-button-primary" style="margin-top: 20px;">Create new</a>
</div>
{% endblock %}
