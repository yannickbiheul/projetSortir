{% extends 'base.html.twig' %}

{% block title %}Annulation
{% endblock %}

{% block body %}

	<div class="pure-g">
		<div class="pure-u-1-3" style="margin: auto;">

			{% for message in app.flashes('notice') %}
				<div class="flash-notice">
					{{ message }}
				</div>
			{% endfor %}

			<h1>Annuler une Sortie</h1>

			<p>Nom : {{ sortie.nom }}</p>
			<p>Date : {{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y H:i') : '' }}</p>
			<p>Ville : {{ sortie.lieu.ville.nom }}</p>
			<p>Lieu : {{ sortie.lieu.nom }}</p>

			{{ form_start(form, {'attr': {'class': 'pure-form pure-form-stacked'}}) }}

			<div class="pure-u-11-24" style="margin-right: 40px;">
				{{ form_row(form.libelle, {'attr': {'class': 'pure-input-1'}}) }}
			</div>

			<div class="container-Bouton">
				<button type="submit" class="pure-button pure-button-primary" style="margin: 10px 0;">Enregitrer</button>

				<a href="{{ path('app_sortie_index') }}" class="pure-button pure-button-primary">Annuler</a>
			</div>

			{{ form_end(form) }}

		</div>
	</div>

{% endblock %}
