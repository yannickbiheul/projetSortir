{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="pure-g">
		
		<div class="pure-u-1-3 div-form" style="margin: auto;">
			<h1>Inscription</h1>

			{{ form_start(registrationForm, {'attr': {'class': 'pure-form pure-form-stacked'}}) }}

                {{ form_row(registrationForm.pseudo, {'attr': {'class': 'pure-input-1'}}) }}
                {{ form_row(registrationForm.prenom, {'attr': {'class': 'pure-input-1'}}) }}
                {{ form_row(registrationForm.nom, {'attr': {'class': 'pure-input-1'}}) }}
                {{ form_row(registrationForm.telephone, {'attr': {'class': 'pure-input-1'}}) }}
                {{ form_row(registrationForm.email, {'attr': {'class': 'pure-input-1'}}) }}
                {{ form_row(registrationForm.site, {'attr': {'class': 'pure-input-1'}}) }}
                {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'pure-input-1'}}) }}
                {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'pure-input-1'}}) }}
                {{ form_row(registrationForm.actif) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="pure-button pure-button-primary">Register</button>

			{{ form_end(registrationForm) }}
		</div>
		
	</div>


{% endblock %}
