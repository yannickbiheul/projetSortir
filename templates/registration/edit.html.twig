{% extends 'base.html.twig' %}

{% block title %}Mon profil
{% endblock %}

{% block body %}

	<div class="pure-g">

		<div class="pure-u-1-3 div-form" style="margin: auto;">
			<h1>Mon profil</h1>

			{{ form_start(registrationForm, {'attr': {'class': 'pure-form pure-form-stacked formulaire'}}) }}
                {{ form_row(registrationForm.pseudo, {'attr': {'class': 'pure-input-1', 'value': user.pseudo}}) }}
                {{ form_row(registrationForm.prenom, {'attr': {'class': 'pure-input-1', 'value': user.prenom}}) }}
                {{ form_row(registrationForm.nom, {'attr': {'class': 'pure-input-1', 'value': user.nom}}) }}
                {{ form_row(registrationForm.telephone, {'attr': {'class': 'pure-input-1', 'value': user.telephone}}) }}
                {{ form_row(registrationForm.email, {'attr': {'class': 'pure-input-1', 'value': user.email}}) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}

                <button type="submit" class="pure-button pure-button-primary">Modifier</button>
            <button type="submit" class="pure-button pure-button-danger">Annuler</button>
			{{ form_end(registrationForm) }}
		</div>

	</div>


{% endblock %}
